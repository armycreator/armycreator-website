{
    "name": "jdeniau/armycreator",
    "description": "Wargame List Maker",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.2.*",
        "doctrine/orm": "2.3.*",
        "doctrine/doctrine-bundle": "1.2.*",
        "stof/doctrine-extensions-bundle": "1.1.*",
        "twig/extensions": "1.0.*",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.2.*",
        "symfony/monolog-bundle": "2.2.*",
        "sensio/distribution-bundle": "2.2.*",
        "sensio/framework-extra-bundle": "2.2.*",
        "sensio/generator-bundle": "2.2.*",
        "jms/security-extra-bundle": "1.4.*",
        "jms/di-extra-bundle": "1.3.*",
        "sonata-project/intl-bundle": ">2.1.0",

        "apy/breadcrumbtrail-bundle":"dev-master",

        "elnur/blowfish-password-encoder-bundle": "dev-master",
        "knplabs/knp-menu-bundle":"2.0.*",
        "mpdf/mpdf" : "5.6.*",
		"friendsofsymfony/user-bundle": "2.0.*",

        "knacss/knaless" : "dev-master",
        "aristath/elusive-iconfont" : "dev-master"
    },

    "require-dev": {
		"jms/debugging-bundle": "dev-master",
		"raulfraile/LadybugBundle": "dev-master"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
	"repositories": [
		{
			"type": "package",
			"package": {
				"version": "master",
				"name": "aristath/elusive-iconfont",
				"source": {
					"url": "https://github.com/aristath/elusive-iconfont.git",
					"type": "git",
					"reference": "master"
				}
			}
		},
        {
            "type": "package",
            "package" : {
                "name": "knacss/knaless",
                "version": "dev-master",
                "dist": {
                    "url": "http://knacss.com/css/knacss.less",
                    "type": "file"
                }
            }
        }
	]
}

