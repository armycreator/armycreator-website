{
    "name": "jdeniau/armycreator",
    "description": "Wargame List Maker",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.3.*",
        "doctrine/orm": "2.*",
        "doctrine/doctrine-bundle": "1.*",
        "stof/doctrine-extensions-bundle": "1.1.*@dev",
        "twig/extensions": "1.*",
        "symfony/assetic-bundle": "2.3.*",
        "symfony/swiftmailer-bundle": "2.3.*",
        "symfony/monolog-bundle": "2.3.*",
        "sensio/distribution-bundle": "2.3.*",
        "sensio/framework-extra-bundle": "2.3.*",
        "sensio/generator-bundle": "2.3.*",

        "jms/security-extra-bundle": "1.*",
        "jms/di-extra-bundle": "1.*",
        "sonata-project/intl-bundle": "2.*",
        "ircmaxell/password-compat": "1.*",

        "apy/breadcrumbtrail-bundle":"dev-master",

        "knplabs/knp-menu":"2.0.*@dev",
        "knplabs/knp-menu-bundle":"2.0.*@dev",
        "mpdf/mpdf" : "5.6.*",
        "friendsofsymfony/user-bundle": "2.*@dev",
        "friendsofsymfony/jsrouting-bundle": "@stable"
    },

    "require-dev": {
        "raulfraile/ladybug-bundle": "@stable"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
            ],
            "post-update-cmd": [
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
                "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
                ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
