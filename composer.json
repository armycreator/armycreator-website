{
    "name": "jdeniau/armycreator",
    "description": "Wargame List Maker",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "~2.6",
        "doctrine/orm": "~2.0",
        "doctrine/doctrine-bundle": "~1.0",
        "stof/doctrine-extensions-bundle": "~1.1",
        "twig/extensions": "~1.0",
        "symfony/swiftmailer-bundle": "~2.0",
        "symfony/monolog-bundle": "~2.0",
        "sensio/distribution-bundle": "~2.0",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.0",

        "jms/security-extra-bundle": "~1.0",
        "jms/di-extra-bundle": "~1.0",
        "sonata-project/intl-bundle": "~2.0",
        "ircmaxell/password-compat": "~1.0",
        "oneup/acl-bundle": "@stable",
        "knplabs/knp-snappy-bundle": "~1.2",
        "raven/raven": "@stable",

        "apy/breadcrumbtrail-bundle":"~1.0",
        "m6web/statsd-bundle": "~2.0",

        "knplabs/knp-menu-bundle":"~2.0",
        "knplabs/knp-paginator-bundle":"~2.0",
        "friendsofsymfony/user-bundle": "2.*@dev",
        "friendsofsymfony/jsrouting-bundle": "@stable",
        "helios-ag/fm-bbcode-bundle": "@stable",
        "presta/sitemap-bundle": "~1.0",

        "jms/serializer-bundle": "~0.13",
        "friendsofsymfony/rest-bundle": "~1.4",
        "willdurand/hateoas-bundle": "~0.4",
        "friendsofsymfony/oauth-server-bundle": "~1.4",
        "nelmio/api-doc-bundle": "~2.7"
    },

    "require-dev": {
        "raulfraile/ladybug-bundle": "~1.0",
        "atoum/atoum": "~1.0"
    },

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    }
}
