{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block title %}Army goup detail{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('army_group_list', {'groupId' : entity.id}) }}">
            {{ "default.back_to_list"|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('army_group_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        {{ form_start(delete_form, { action: path('army_group_delete', { 'id': entity.id }) }) }}
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "button.delete"|trans }}</button>
        </form>
    </li>
</ul>
{% endblock %}
