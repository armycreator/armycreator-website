{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block h1 %}Breed list{% endblock %}

{% block content %}
<table class="squadType">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Available</th>
            <th>{% trans %}breed.list.new{% endtrans %}</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_breed_show', { 'game': entity.game.code, 'breed': entity.slug }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.available ? "Yes" : "No" }}</td>
            <td>{{ entity.newVersion }}</td>
            <td>
                <a href="{{ path('admin_breed_edit', { 'breed': entity.slug }) }}" class="acButton">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="txtright">
    <a href="{{ path('admin_breed_new', { "game": game.code}) }}" class="acButton acButtonBig">
        Create a new entry
    </a>
</div>
{% endblock %}
