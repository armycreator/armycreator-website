{% extends 'SitiowebArmyCreatorBundle:Breed:layout.html.twig' %}

{% block breedContent %}
{% set breed = app.request.get("breed") %}
{% set game = breed.game %}
{% set params = {"game": game.code, "breed": breed.slug} %}

<div class="row">
    <div class="stuffList">
        <h2>Weapon List</h2>

        {% block weapon_new %}
            {% if ac_granted("EDIT", breed) %}
                <aside class="txtright">
                    <a href="{{ path("weapon_new", params) }}" title="{{ "breed.weapon_list.new"|trans }}" class="acButton">
                        {{ "breed.weapon_list.new"|trans }}
                    </a>
                </aside>
            {% endif %}
        {% endblock %}

        {% for weapon in weaponList %}
            <div>
                <h4>
                    {{ weapon.name }}
                    {% if ac_granted("EDIT", breed) %}
                        <a class="acButton" href="{{ path("weapon_edit", params + { "id": weapon.id}) }}">
                            <i class="el-icon-pencil"></i>
                        </a>
                        {% if weapon.unitStuffList.count() == 0 %}
                            <form action="{{ path('weapon_delete', params + { "id": weapon.id}) }}" method="post" class="inbl">
                                <input type="hidden" name="_method" value="DELETE" />
                                {% set deleteForm = deleteWeaponFormList[weapon.id] %}
                                {{ form_widget(deleteForm.createView) }}
                                <button class="acButton" type="submit" onclick="return confirm('{{ "confirm.delete"|trans }}');">
                                    <i class="el-icon-remove"></i>
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}
                </h4>
                <div>
                    {{ "breed.weapon_list.type"|trans }}:
                    {{ weapon.type }}
                </div>
                <div>
                    {{ "breed.weapon_list.range"|trans }}:
                    {{ weapon.range }}
                    |
                    {{ "breed.weapon_list.strenght"|trans }}:
                    {{ weapon.strenght }}
                    |
                    {{ "breed.weapon_list.armorPenetration"|trans }}:
                    {{ weapon.armorPenetration }}
                </div>
            </div>
        {% endfor %}

        {% if weaponList %}
            {{ block("weapon_new") }}
        {% endif %}
    </div>

    <div class="stuffList">
        <h2>Equipement List</h2>

        {% block equipement_new %}
            {% if ac_granted("EDIT", breed) %}
                <aside class="txtright">
                    <a href="{{ path("equipement_new", params) }}" title="{{ "breed.equipement_list.new"|trans }}" class="acButton">
                        {{ "breed.equipement_list.new"|trans }}
                    </a>
                </aside>
            {% endif %}
        {% endblock %}

        {% for equipement in equipementList %}
            <div>
                <h4>
                    {{ equipement.name }}
                    {% if ac_granted("EDIT", breed) %}
                        <a class="acButton" href="{{ path("equipement_edit", params + { "id": equipement.id}) }}">
                            <i class="el-icon-pencil"></i>
                        </a>
                        {% if equipement.unitStuffList.count() == 0 %}
                            <form action="{{ path('equipement_delete', params + { "id": equipement.id}) }}" method="post" class="inbl">
                                <input type="hidden" name="_method" value="DELETE" />
                                {% set deleteForm = deleteEquipementFormList[equipement.id] %}
                                {{ form_widget(deleteForm.createView) }}
                                <button class="acButton" type="submit" onclick="return confirm('{{ "confirm.delete"|trans }}');">
                                    <i class="el-icon-remove"></i>
                                </button>
                            </form>
                        {% endif %}
                    {% endif %}
                </h4>
                <div>
                    {{ equipement.description }}
                </div>
            </div>
        {% endfor %}

        {% if equipementList %}
            {{ block("equipement_new") }}
        {% endif %}
    </div>
</div>
{% endblock %}


