{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block title %}{{ "default.new.title"|trans }}{% endblock %}

{% block content %}
<form action="{{ path('breedgroup_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">{{ "button.edit"|trans }}</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('breedgroup') }}">
            {{ "default.back_to_list"|trans }}
        </a>
    </li>
    <li>
        <form action="{{ path('breedgroup_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "button.delete"|trans }}</button>
        </form>
    </li>
</ul>
{% endblock %}
