{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block title %}BreedGroup creation{% endblock %}

{% block content %}
{{ form_start(form, {action: path('breedgroup_create', {'game': game.code}), attr: {class: 'opaque'}}) }}
    {{ form_widget(form) }}
    <p class="txtright">
        <button class="acButton acButtonBig" type="submit">{{ "button.create"|trans }}</button>
    </p>
</form>

<div class="txtright">
    <a class="acButton" href="{{ path('breedgroup', {'game': entity.game.code }) }}">
        {{ "default.back_to_list"|trans }}
    </a>
</div>
{% endblock %}
