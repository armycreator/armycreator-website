{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block title %}
    {{ "equipement.new.title"|trans }}
{% endblock %}

{% block content %}
    {% set breed = app.request.get("breed") %}
    {% set game = breed.game %}
    {% set params = {"game": game.code, "breed": breed.slug} %}

    {{ form_start(form, {action: path("equipement_create", params), attr: {class: 'opaque'}}) }}
        {{ form_widget(form) }}
    </form>

    <div>
        <a href="{{ path("admin_breed_stuff", params) }}" class="acButton">
            {{ "breed.back_to_breed"|trans }}
        </a>
    </div>
{% endblock %}
