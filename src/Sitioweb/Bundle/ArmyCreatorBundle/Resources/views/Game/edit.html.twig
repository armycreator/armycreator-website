{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block h1 %}Game edit{% endblock %}

{% block content %}
<form action="{{ path('admin_game_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_game_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
