{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block h1 %}Game{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ entity.code }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_game_edit', { 'code': entity.code }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_game_delete', { 'code': entity.code }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
