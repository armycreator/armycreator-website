{% extends 'SitiowebArmyCreatorBundle::layout.html.twig' %}

{% block h1 %}New {{ currentUnitType.name }} squad{% endblock %}

{% block content %}
    {% block squadAddNav %}
        <nav>
            <div>
                Squad choice
            </div>
            <div>
                Squad Stuff
            </div>
        <nav>
    {% endblock %}

    {% block squadAddContent %}
        {% for unitType in breed.unitTypeList %}
            <div>
                <a href="{{ path('squad_new', {'armySlug' : army.slug, 'unitTypeSlug' : unitType.slug}) }}" title="{{ unitType.name }}">
                    {{ unitType.name }}
                </a>
            </div>
        {% endfor %}

        <ul>
            {% for unit in currentUnitType.visibleUnitList %}
                <li>
                    <a href="{{ path('selected_unit_squad_new', {'armySlug' : army.slug, 'id' : unit.id}) }}" title="{{ unit.name }}">
                        {{ unit.name }}
                        {% if unit.groupType == 'unit' %}
                            {{ unit.points }}
                        {% endif %}
                     </a>
                </li>
            {% endfor %}
        </ul>

        Name this squad : ...
    {% endblock %}
{% endblock %}
