{% extends 'SitiowebArmyCreatorBundle:Squad:layout.html.twig' %}

{% block squadAddNavTitle %}
    {{ 'squad.edit.choose_breed'|trans }}
{% endblock %}

{% block squadAddContent %}

    {% for breedGroup in game.breedGroupList %}
        <div class="grid1-11">
            <h3 class="grid-header">
                {{ breedGroup.name }}
            </h3>

            <div>
                <ul class="inline inlineBig">
                    {% for tmpBreed in breedGroup.breedList %}
                        <li>
                            <a
                                href="{{ path("squad_select_unitType", { "armySlug": army.slug, "breedSlug": tmpBreed.slug }) }}"
                                title="{{ tmpBreed.name }}"
                            >
                                <figure class="breed">
                                    {{ breedImage(tmpBreed)|raw }}

                                    <figcaption>
                                        {{ tmpBreed.name }}
                                    </figcaption>
                                </figure>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    {% endfor %}



