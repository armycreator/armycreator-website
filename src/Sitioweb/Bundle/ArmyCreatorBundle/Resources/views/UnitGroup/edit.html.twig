{% extends 'SitiowebArmyCreatorBundle:Breed:layout.html.twig' %}

{% block title %}
    {{ "unit_group.edit.title"|trans({"%unitGroup%": edit_form.vars.data.name}) }}
{% endblock %}

{% block content%}
    {% set breed = app.request.get("breed") %}
    {% set game = breed.game %}
    {% set params = {"game": game.code, "breed": breed.slug} %}

    {{ form_start(edit_form, {action: path("unitgroup_update", params + { 'id': entity.id }), attr: {class: 'opaque'}}) }}
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p class="txtright">
        <button class="acButton acButtonBig" type="submit">{{ "button.edit"|trans }}</button>
        </p>
    </form>

    <div class="right">
        {{ form_start(delete_form, {action: path('unitgroup_delete', params + { 'id': entity.id })}) }}
            {{ form_widget(delete_form) }}
            <button class="acButton" type="submit">{{ "button.delete"|trans }}</button>
        </form>
    </div>
    <div>
        <a href="{{ path("admin_breed_show", params) }}">
            {{ "breed.back_to_breed"|trans }}
        </a>
    </div>
{% endblock %}
