{% macro stick(color, stickLeft) %}
    {% if color and color[:1] != "#" %}
        {% set color = "#" ~ color %}
    {% endif %}
    <div class="unitTypeStickContainer">
        <div class="unitTypeStick {% if stickLeft %} stickLeft{% endif %}" style="background-color:{{ color|default("#ccc") }}"></div>
    </div>
{% endmacro %}
