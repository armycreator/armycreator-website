{% extends '::base.html.twig' %}

{% block title "ArmyCreator" %}

{% block body %}
	<header id="websiteHeader">
		{% block websiteHeaderBar %}
			<div class="headerBar">
                <a href="{{ path('homepage') }}" title="Army Creator">
                    Picto accueil
                </a>
                Bienvenue sur Army Creator

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    Hello {{ app.user.username }}
                {% else %}
                    <a href="{{ path('forum_connection') }}">
                        Connectez-vous
                    </a>
                    ou 
                    <a href="{{ path('forum_create_account') }}">
                        Cr√©er un compte
                    </a>
                    | 
                {% endif %}
                <a href="#">
                    Aide
                </a>
            </div>
		{% endblock %}

		{% block websiteHeader %}
			<div class="logo"></div>
		{% endblock %}
	</header>

	{% block websiteNav %}
        <nav id="websiteNav">
            {{ knp_menu_render('SitiowebArmyCreatorBundle:Builder:mainMenu') }}
        </nav>
	{% endblock %}

	<div id="websiteContent">
		{# <h1><span>{{ block('title') }}</span> {% block h1 %}{% endblock %}</h1> #}
        {% block h1Container %}
            <h1>{% block h1 %}{{ block('title') }}{% endblock %}</h1>
        {% endblock %}
		

        {% block flashes %}
            {% for key, message in app.session.getFlashes() %}
                <div class="{{ key }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endblock %}

		{% block content %}
		{% endblock %}
	</div>

	<footer id="websiteFooter">
		{% block websiteFooter %}
			Website Footer
		{% endblock %}
	</footer>
{% endblock %}

{% block javascripts %}
	{% javascripts '@SitiowebArmyCreatorBundle/Resources/public/js/*' %}
		 <script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
	{% stylesheets 
		'%kernel.root_dir%/../vendor/raphaelgoetter/knacss/css/knacss.css'
		'@SitiowebArmyCreatorBundle/Resources/public/css/*' 
		filter='less' output='css/global.css' %}
		 <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}
