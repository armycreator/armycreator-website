    {% if app.environment == 'dev' %}
        <!-- dev:print.css -->
          <link rel="stylesheet" href="/tmp/css/print.css/print.css" media="print" />
          <link rel="stylesheet" href="/tmp/css/print.css/content-print.css" media="print" />
          <link rel="stylesheet" href="/tmp/css/print.css/armyDetail-print.css" media="print" />
